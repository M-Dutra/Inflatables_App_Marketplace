<div class="container">
  <h1>All inflatables</h1>
  <div class="row row-cols-12 row-cols-md-4 g-4">
      <% @inflatables.each do |inflatable| %>
        <%# <div class="col"> %>
          <div class="card-group">
            <div class="card h-100 card-style" style="width: 18rem;">
              <%# <div><i class="fa-regular fa-heart"></i></div> %>
              <%= link_to inflatable_path(inflatable) do %>
              <div class="card-body">
              <%= cl_image_tag(inflatable.photo.key, width: 250, height: 300, crop: :fill) if inflatable.photo.key %>
                <h6 class="card-subtitle "><%= inflatable.category %></h6>
                <p class="card-title"><%= inflatable.title %></p>
                <div class="price-label text-center align-middle">
                  <h3 class="card-price">â‚¬ <%= inflatable.price %></h3>
                </div>
              </div>
            <% end %>
            </div>
          </div>
        <%# </div> %>
      <% end %>
  </div>
</div>

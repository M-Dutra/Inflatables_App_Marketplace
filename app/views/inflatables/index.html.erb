<div class="container">
  <h1>All inflatables</h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
      <% @inflatables.each do |inflatable| %>
      <div class="col">
        <%= link_to inflatable_path(inflatable) do %>
        <div class="card card-style" style="width: 18rem;">
          <%# <img src="https://source.unsplash.com/random/400Ã—300/?ballon"  alt="..."> %>
          <div class="card-body">
          <%= cl_image_tag(inflatable.photo.key, width: 250, height: 300, crop: :fill) if inflatable.photo.key %>
            <h6 class="card-subtitle "><%= inflatable.category %></h6>
            <h2 class="card-title"><%= inflatable.title %></h2>
            <p class="card-text"><%= inflatable.description %></p>
            <h3 class="card-title"><%= inflatable.price %></h3>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>
  </div>
</div>
